<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout">
    
    <EditText android:id="@+id/enterElementBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterElementBoxMessage" />
    
    <TextView android:id="@+id/viewResultsOne"
        android:tag="one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:onClick="onClick"                
        android:clickable="true" />
    
    <TextView android:id="@+id/viewResultsTwo"
        android:tag="two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:onClick="onClick"                
        android:clickable="true" />
    
    <TextView android:id="@+id/viewResultsThree"
        android:tag="two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:onClick="onClick"                
        android:clickable="true" />
    
    <TextView android:id="@+id/viewResultsFour"
        android:tag="two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:onClick="onClick"                
        android:clickable="true" />
    
    <TextView android:id="@+id/viewResultsFive"
        android:tag="two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:onClick="onClick"                
        android:clickable="true" />
    
</LinearLayout>